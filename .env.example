# Configuración de Entorno - Proyecto Edificio Admin
# Copia este archivo a .env y ajusta los valores según tu entorno

# Entorno (development/production)
ENVIRONMENT=development
DEVELOPMENT_MODE=true

# Base de datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=edificio_admin

# API Configuration
API_BASE_URL=http://localhost:8080/proyectoAdmEdificios/api/

# DeepSeek AI Configuration
DEEPSEEK_API_KEY=tu_api_key_aqui
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1/

# Seguridad
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambiar_en_produccion
SESSION_LIFETIME=3600

# Uploads
UPLOAD_PATH=./uploads/
MAX_FILE_SIZE=5242880

# Logs
LOG_PATH=./logs/
LOG_LEVEL=INFO

# Configuración de Correo
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@edificio.com
MAIL_FROM_NAME="Sistema Edificio Admin"
